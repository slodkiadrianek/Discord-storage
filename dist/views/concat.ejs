    <form action="/auth/concat" method="post">
      <input type="text" name="threadId" required placeholder="ThreadId" />
      <select name="type" id="">
        <option value="pdf">PDF</option>
        <option value="txt">TXT</option>
      </select>
      <button type="submit">Send</button>
    </form>
  </body>
